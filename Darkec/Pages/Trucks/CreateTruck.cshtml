@page
@model Darkec.Pages.Trucks.CreateTruckModel
@{
    ViewData["Title"] = "CreateTruck";
}

<h1>Create Truck</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Truck.Id" class="control-label"> Id </label>
        <input asp-for="@Model.Truck.Id" class="form-control" />
        <span asp-validation-for="@Model.Truck.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Truck.RegistrationNumber" class="control-label"> Registration Number </label>
        <input asp-for="@Model.Truck.RegistrationNumber" class="form-control" />
        <span asp-validation-for="@Model.Truck.RegistrationNumber" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Truck.Length" class="control-label">Length</label>
        <input asp-for="@Model.Truck.Length" class="form-control" />
        <span asp-validation-for="@Model.Truck.Length" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Truck.Width" class="control-label">Width</label>
        <input asp-for="@Model.Truck.Width" class="form-control" />
        <span asp-validation-for="@Model.Truck.Width" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Truck.Height" class="control-label">Height</label>
        <input asp-for="@Model.Truck.Height" class="form-control" />
        <span asp-validation-for="@Model.Truck.Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Truck.CarryingWeight" class="control-label">Carrying Weight</label>
        <input asp-for="@Model.Truck.CarryingWeight" class="form-control" />
        <span asp-validation-for="@Model.Truck.CarryingWeight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Truck.EngineHorsepower" class="control-label">Engine Horsepower</label>
        <input asp-for="@Model.Truck.EngineHorsepower" class="form-control" />
        <span asp-validation-for="@Model.Truck.EngineHorsepower" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Truck.ImageName" class="control-label"> Image Name </label>
        <input asp-for="@Model.Truck.ImageName" class="form-control" />
        <span asp-validation-for="@Model.Truck.ImageName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>