@page
@model Darkec.Pages.ServicesModel
@{ }
<html>
<head>
    <title>Services</title>

    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="card_grid">
        <div class="wrapper">
            <div class="cards_wrap">
                <div class="card_item">
                    <div class="card_inner">
                        <a asp-page="Apartments/GetAllApartments">
                            <div class="card_top">
                                <img src="Images/Apartments/ap1.jpg" alt="Apartments" class="card_image">
                            </div>
                            <div class="card_bottom">
                                <div class="card_category">
                                    Apartments
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="wrapper">
            <div class="cards_wrap">
                <div class="card_item">
                    <div class="card_inner">

                        <a asp-page="/Boats/GetAllBoats">

                            <div class="card_top">
                                <img src="Images\Boats\1082_70hp.jpg" alt="Boats" class="card_image">
                            </div>
                            <div class="card_bottom">
                                <div class="card_category">
                                    Boats
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="wrapper">
            <div class="cards_wrap">
                <div class="card_item">
                    <div class="card_inner">

                        <a asp-page="Trucks/GetAllTrucks">
                            <div class="card_top">
                                <img src="Images\Trucks\yellow.jpg" alt="Towing Truck" class="card_image">
                            </div>
                            <div class="card_bottom">
                                <div class="card_category">
                                    Towing Trucks
                                </div>
                            </div>

                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
