@page
@model Darkec.Pages.Apartments.CreateApartmentModel
@{
    ViewData["Title"] = "CreateApartment";
}

<h1>Create Apartment</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Apartment.Id" class="control-label"> Id </label>
        <input asp-for="@Model.Apartment.Id" class="form-control" />
        <span asp-validation-for="@Model.Apartment.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Apartment.Name" class="control-label">Name </label>
        <input asp-for="@Model.Apartment.Name" class="form-control" />
        <span asp-validation-for="@Model.Apartment.Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Apartment.Description" class="control-label">Description</label>
        <input asp-for="@Model.Apartment.Description" class="form-control" />
        <span asp-validation-for="@Model.Apartment.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Apartment.Price" class="control-label">Price</label>
        <input asp-for="@Model.Apartment.Price" class="form-control" />
        <span asp-validation-for="@Model.Apartment.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Apartment.ImageName" class="control-label"> ImageName </label>
        <input asp-for="@Model.Apartment.ImageName" class="form-control" />
        <span asp-validation-for="@Model.Apartment.ImageName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>